        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_19_R2</artifactId>
            <version>v1_19_R2</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_19_R3</artifactId>
            <version>v1_19_R3</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_20_R0</artifactId>
            <version>v1_20_R0</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_20_R1</artifactId>
            <version>v1_20_R1</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_20_R2</artifactId>
            <version>v1_20_R2</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_20_R3</artifactId>
            <version>v1_20_R3</version>
            <type>jar</type>
            <scope>compile</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>be.machigan</groupId>
            <artifactId>ProtectedDebugStick-v1_20_R4</artifactId>
